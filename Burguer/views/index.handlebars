<div class="container">
  <div class="row">
    <div class="col-sm">
      <h1>Add a burguer</h1>
      <form class="create-form">

        <div class="form-group">
          <label for="burguer-name">Burguers Name:</label>
          <input type="text" id="burguer-name" name="name">
        </div>

        <div class="form-group">
          <label for="devoured">When do you want to eat it?</label><br>
          <input type="radio" name="devoured" value="1" checked> Eat it now!<br>
          <input type="radio" name="devoured" value="0"> Eat it Later!
        </div>


        <button type="submit">Add burguer</button>
      </form>
    </div>
    <div class="col-sm">
      <h1>Burguers List</h1>

      <ul>
        {{#each burguers}}
        {{#unless devoured}}
        <div>{{this.burguer_name}}</div>
        <div>{{this.devoured}}</div>
        <button data-id={{this.id}} class="devour">Eat Burguer!</button>
        {{/unless}}

        {{/each}}
      </ul>
    </div>
    <div class="col-sm">
      <h1>burguers Devoured!</h1>

      <ul>
        {{#each burguers}}
        {{#if devoured}}
        <div>{{this.burguer_name}}</div>
        <div>{{this.devoured}}</div>

        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>