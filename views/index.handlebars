<h1>Welcome to OMG Burger!</h1>
<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2>Order Here</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burger-name"></label>
          <input type="text" id="burger-name" name="name" placeholder="Enter Burger Name">
        </div>

        <div class="form-group">
          <label for="devoured">When do you want to eat it?</label><br>
          <input type="radio" name="devoured" value="1"> checked> Eat it now!<br>
          <input type="radio" name="devoured" value="0"> Eat it Later!
        </div>


        <button type="submit">Add burger</button>
      </form>
    </div>
    <div class="col-sm">
      <h2>Burgers List</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <div>{{this.burger_name}}</div>
        <div>{{this.devoured}}</div>
        <button data-id={{this.id}} class="devour">Eat Burger!</button>
        {{/unless}}

        {{/each}}
      </ul>
    </div>
    <div class="col-sm">
      <h2>Burgers Devoured</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <div>{{this.burger_name}}</div>
        <div>{{this.devoured}}</div>

        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
